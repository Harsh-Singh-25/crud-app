<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Users | Admin Panel</title>
  <link rel="stylesheet" href="/stylesheet/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

  <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <nav class="w-full max-w-7xl mb-12">
      <a href="/" class="text-zinc-400 hover:text-blue-400 font-semibold transition focus:outline-none focus:ring-2 focus:ring-blue-400 rounded">
        ‚Üê Back To Dashboard
      </a>
    </nav>
    <h1 class="text-4xl font-extrabold tracking-tight mb-8 text-center text-blue-400">
      All Users
    </h1>
    
    <div class="users flex gap-5 flex-wrap justify-center">
      <% if (users && users.length > 0) { %>
        <% users.forEach(function(user) { %>
          <div class="user w-72 p-4 bg-zinc-800 rounded-lg shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-full h-52 rounded-lg bg-zinc-700 mb-3 overflow-hidden flex items-center justify-center">
              <% if (user.imageUrl) { %>
                <img src="<%= user.imageUrl %>" alt="" class="object-cover w-full h-full rounded-lg" />
              <% } else { %>
                <span class="text-zinc-500 text-xl">No Image</span>
              <% } %>
            </div>
            <h3 class="text-xl font-semibold mt-2 tracking-tight truncate" title="<%= user.name %>"><%= user.name %></h3>
            <h5 class="text-zinc-500 mb-6 truncate" title="<%= user.email %>"><%= user.email %></h5>
            <div class="flex gap-3 mt-auto">
              <a href="/edit/<%= user._id %>" class="flex-1 px-4 py-2 bg-blue-600 rounded-lg text-white text-center text-sm font-medium hover:bg-blue-700 transition">Edit</a>
              <a href="/delete/<%= user._id %>" class="flex-1 px-4 py-2 bg-red-600 rounded-lg text-white text-center text-sm font-medium hover:bg-red-700 transition">Delete</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="text-center text-zinc-400 text-lg">
          <p class="mb-4">No users found.</p>
          <a href="/" class="inline-block px-6 py-2 bg-blue-600 rounded-lg text-white font-medium hover:bg-blue-700 transition">Create First User</a>
        </div>
      <% } %>
    </div>
    
  </div>

</body>
</html>